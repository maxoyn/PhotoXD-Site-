        width: 50%;
        background-color: darkslategray;
        text-align: center;
        color: white;
    }

    ul {
        list-style-type: none;
        margin-bottom: 2px;
    }

    #s1 {
        background-color: darkorange;
        padding: 15px 56px;
        text-align: center;
        font-size: 16px;
        font-weight: bold;
        margin-top: 3px;
        cursor: pointer;
        border-radius: 5px;
        border: 2px solid slategray;
    }

        #s1:hover {
            background-color: orangered;
            color: darkseagreen;
            border: 2px solid darkslategray;
        }

    #h11 {
        color: orange;
        font-style: italic;
    }
</style>
