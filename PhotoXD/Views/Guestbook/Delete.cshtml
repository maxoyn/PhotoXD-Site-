@{
    ViewBag.Title = "Delete";
}

<div id="login">
    <section id="loginForm">
        <p>Are you sure you want to delete:</p>
        <h id="h11">@Model.Message</h>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <p>
                <input id="s1" value="No, go back!" onclick="history.go(-1);" />
                <input type="submit" id="s1" name="Delete" value="Yes, Delete" />
                <br />
                @Html.ActionLink("Go back", "IndexAsync")
            </p>
        }
    </section>
</div>

